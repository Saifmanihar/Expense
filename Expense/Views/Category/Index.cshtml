<li class="nav-item">
<a class="nav-link text-white" asp-area="" asp-controller="Category" asp-action="CreateCategory">CreateCategory</a>
</li>



<div class="row">
    <div class="col-md-7">
        <ejs-grid id="categories" dataSource="@Model" gridLines="None"allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Title" field="TitleWithIcon"></e-grid-column>
                <e-grid-column headerText="Type" template="#TypeColumnTemplate" ></e-grid-column>
                <e-grid-column headerText="Icon" field="Icon"></e-grid-column>
                <e-grid-column headerText="Action" template="#actionColumnTemplate" width="150px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
</div>
<script id="TypeColumnTemplate" type="text/x-template">
    ${if(Type == "Income")}
    <span class="badge bg-success">${Type}</span>
    ${else}
    <span class="badge bg-danger">${Type}</span>
    ${/if}
</script>

<script id="actionColumnTemplate" type="text/x-template">
  <div class="d-flex flex-row justify-content-start">
      <a class=" btn btn-primary mr-5"  href="/Category/CategoryDetails/${CategoryId}">Edit</a>

      <form method="post" action="/Category/DeleteCategory/${Id}">
        <button type="submit" class="btn  btn-danger">Delete</button>
      </form>
  </div>
</script>

