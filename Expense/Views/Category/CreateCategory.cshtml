@model Expense.Models.Category

<h1>Create Category</h1>

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5">
            <form method="post" asp-controller="category" asp-action="CreateCategory">
                 <div class="form-group">
                   <div class='e-btn-group custom-rbt-group col-lg-6'>
                        <input type="radio" id="radioleft" name="Type" value="Expense" checked="(@Model.Type=="Expense")" />
                        <label class="e-btn" for="radioleft">Expense</label>
                        <input type="radio" id="radiomiddle" name="Type" value="Income"checked="(@Model.Type=="Income")"  />
                        <label class="e-btn" for="radiomiddle">Income</label>
                   </div>
                  <div class="form-group">
                          @*<label asp-for="Title">Title </label>*@
                         <ejs-textbox id="title" placeholder=" Title" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Title"></span>
                  </div>

                   <div class="form-group">
                           @*<label asp-for="Type">Category Type</label>*@
                      <ejs-textbox id="Icon"  placeholder="Category type" floatLabelType="Always"></ejs-textbox>
                        <span asp-validation-for="Icon"></span>
                    </div>
                    <span asp-validation-for="Icon"></span>
                 </div>

                <button type="submit" class="btn btn-primary mt-2">Submit</button>
            </form>

        </div>
    </div>
</div>
